    "class Chips:\n",
    "    \n",
    "    def __init__(self):\n",
    "        self.total = 100 \n",
    "        self.bet = 0\n",
    "        \n",
    "    def win_bet(self):\n",
    "        self.total += self.bet\n",
    "    \n",
    "    def lose_bet(self):\n",
    "        self.total -= self.bet"
   ]
