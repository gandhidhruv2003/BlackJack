    "        x=input(\"Hit or Stand? \")\n",
    "        if x.lower()==\"hit\":\n",
    "            hit(deck,hand)\n",
    "            \n",
    "        elif x.lower()==\"stand\":\n",
    "            print(\"Player stands. Dealer's turn\")\n",
    "            playing=False\n",
